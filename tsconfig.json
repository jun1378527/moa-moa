{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // JSX 처리 방식
    "baseUrl": ".", // 프로젝트 루트 경로 설정
    "paths": {
      "@/types/*": ["src/types/*"], // 사용자 정의 타입 경로 설정
      "@/components/*": ["src/components/*"], // 추가적인 경로 별칭 설정
      "@/styles/*": ["src/styles/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Next.js 타입 정의 포함
    ".next/types/**/*.ts", // Next.js 자동 생성 타입 정의 포함
    "**/*.ts", // 모든 TypeScript 파일 포함
    "**/*.tsx", // 모든 TypeScript React 파일 포함
    "src/types/**/*.d.ts" // 사용자 정의 타입 정의 파일 포함
  ],
  "exclude": [
    "node_modules" // node_modules 제외
  ]
}
